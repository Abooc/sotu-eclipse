<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="12dip"
        android:text="你可以订制属于自己的主页"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="4dip" >

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="名称："
            android:textStyle="italic" />

        <EditText
            android:id="@+id/nameEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_background"
            android:gravity="center_vertical"
            android:hint="显示名称"
            android:imeOptions="actionSearch"
            android:padding="4dip"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <!--
             <ImageView
            android:id="@+id/ok1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="4dip"
            android:src="@drawable/ic_confirm_green" />
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="4dip" >

        <TextView
            android:id="@+id/url_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="网址："
            android:textStyle="italic" />

        <EditText
            android:id="@+id/urlEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_background"
            android:gravity="center_vertical"
            android:hint="http://www.woolom.com"
            android:imeOptions="actionSearch"
            android:padding="4dip"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <!--
             <ImageView
            android:id="@+id/ok2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="4dip"
            android:src="@drawable/ic_confirm_green" />
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_actionbar_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="6dip"
            android:text="使用默认"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#fff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/ic_actionbar_background_green"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/openGooglePlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_item_selector"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_confirm_green"
                android:gravity="center"
                android:padding="6dip"
                android:text="确定"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="6dip"
            android:text="预览"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:layout_marginBottom="-2dip"
        android:background="@drawable/ic_drawer_shadow_h" />

    <WebView
        android:id="@+id/WebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>