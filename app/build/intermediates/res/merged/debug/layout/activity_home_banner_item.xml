<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:minHeight="120dip"
    android:orientation="vertical" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/activity_home_banner_image"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:maxHeight="140dip"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/activity_home_banner_title"
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_alignParentBottom="true"
        android:background="#30000000"
        android:gravity="center_vertical"
        android:padding="6dip"
        android:text="@string/app_name"
        android:textColor="#F0FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Press"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_item_selector"
        android:contentDescription="@string/app_name" />

</RelativeLayout>